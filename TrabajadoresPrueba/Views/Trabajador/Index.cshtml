@model IEnumerable<TrabajadoresPrueba.Models.Trabajador>

@{
    ViewData["Title"] = "Listado de Trabajadores";
   
}

<h2 class="text-center">Listado de Trabajadores</h2>

<div id="placeElement"></div>

<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <button type="button" class="btn form-control btn-primary mt-2" data-toggle="ajax-modal" data-target="#modalCrear" data-url="@Url.Action("Crear")" >Nuevo Registro</button>
        </div>
    </div>

    
    
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered border-dark mt-5">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoDocumento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NroDocumento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombres)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sexo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nombreDepartamento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nombreProvincia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nombreDistrito)
                        </th>
                        <th>
                            Acción
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoDocumento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NroDocumento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sexo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombreDepartamento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombreProvincia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombreDistrito)
                            </td>
                            <td>
                                <button type="button" class="btn btn-warning" data-toggle="ajax-modal" data-target="#modalCrear" data-url="@Url.Action($"Editar/{item.Id}")">Editar</button>
                                <button type="button" class="btn btn-danger" data-toggle="ajax-modal" data-target="#modalCrear" data-url="@Url.Action($"Eliminar/{item.Id}")">Eliminar</button>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No hay registros de trabajadores</p>
        }

    </div>
    

</div>