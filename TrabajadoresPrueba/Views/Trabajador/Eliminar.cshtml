@model TrabajadoresPrueba.Models.DB.Trabajadores

<div class="modal fade" id="modalCrear">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center">¿Está seguro de eliminar registro?</h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form action="Trabajador/Eliminar">
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />                                               
                        <div class="form-row">
                            <p>Trabajador <label asp-for="Nombres">@Model.Nombres</label> con id : <label asp-for="Id">@Model.Id</label> </p>                        
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-save="modal">Eliminar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>
